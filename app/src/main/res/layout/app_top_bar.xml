<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <ImageButton
        android:id="@+id/top_bar_back_btn"
        android:layout_width="@dimen/back_button_height"
        android:layout_height="@dimen/back_button_height"
        android:layout_marginStart="@dimen/spacing_s"
        android:layout_marginTop="@dimen/spacing_xs"
        android:layout_marginBottom="@dimen/spacing_s"
        android:contentDescription="@string/cd_back_button"
        android:src="@drawable/ic_back"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/top_bar_title"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ellipsize="marquee"
        android:gravity="center"
        android:paddingStart="@dimen/spacing_s"
        android:paddingEnd="@dimen/spacing_s"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_s"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/top_bar_back_btn"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Top Movies" />

</merge>
